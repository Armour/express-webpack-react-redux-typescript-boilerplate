{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "jsx": "preserve",
    "sourceMap": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "moduleResolution": "node",
    "baseUrl": "frontend/src",
    "outDir": "build",
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
