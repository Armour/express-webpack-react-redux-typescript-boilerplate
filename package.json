{
  "name": "express-webpack-react-redux-typescript-boilerplate",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Armour/express-webpack-react-redux-typescript-boilerplate.git"
  },
  "author": "Chong Guo <armourcy@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "yarn dll && cross-env NODE_ENV=development yarn serve",
    "prod": "yarn build && cross-env NODE_ENV=production yarn serve",
    "dll": "yarn clean && cross-env NODE_ENV=production webpack --config webpack.config.dll.babel.js",
    "build": "yarn dll && cross-env NODE_ENV=production webpack --config webpack.config.prod.babel.js",
    "profile": "yarn dll && cross-env NODE_ENV=production webpack --config webpack.config.profile.babel.js",
    "serve": "nodemon --exec babel-node backend/server.js",
    "eslint": "eslint -f codeframe \"**/*.js\"",
    "tslint": "tslint -t codeFrame \"**/*.tsx\"",
    "stylelint": "stylelint \"**/*.css **/*.sass **/*.scss\"",
    "lint": "yarn eslint && yarn tslint && yarn stylelint",
    "clean": "trash frontend/dist .awcache coverage",
    "test": "jest --no-cache --coverage",
    "coverage": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "deploy": "heroku container:push web"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-push": "yarn test && yarn coverage"
    }
  },
  "dependencies": {
    "@types/jest": "^23.3.0",
    "@types/materialize-css": "^1.0.4",
    "@types/prismjs": "^1.9.0",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/react-redux": "^6.0.4",
    "@types/react-router-dom": "^4.2.7",
    "@types/redux-devtools": "^3.0.44",
    "@types/redux-devtools-dock-monitor": "^1.1.32",
    "@types/redux-devtools-log-monitor": "^1.0.33",
    "@types/redux-logger": "^3.0.6",
    "@types/superagent": "^3.8.2",
    "@types/uuid": "^3.4.3",
    "@types/webpack-env": "^1.13.6",
    "add-asset-html-webpack-plugin": "^2.1.3",
    "awesome-typescript-loader": "^5.2.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "body-parser": "^1.18.3",
    "colors": "^1.3.0",
    "commitlint": "^7.0.0",
    "commitlint-config-armour": "^1.1.0",
    "compression": "^1.7.3",
    "connect-redis": "^3.3.3",
    "connected-react-router": "^4.3.0",
    "cookie-parser": "^1.4.3",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "cssnano": "^4.0.2",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "eslint": "^5.1.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "file-loader": "^1.1.11",
    "helmet": "^3.13.0",
    "history": "^4.7.2",
    "html-webpack-plugin": "^3.2.0",
    "husky": "1.0.0-rc.13",
    "image-webpack-loader": "^4.3.1",
    "immutable": "4.0.0-rc.9",
    "jest": "^23.4.1",
    "material-design-icons": "^3.0.1",
    "materialize-css": "1.0.0-rc.2",
    "mini-css-extract-plugin": "^0.4.1",
    "morgan": "^1.9.0",
    "node-sass": "^4.9.2",
    "nodemon": "^1.18.3",
    "offline-plugin": "^5.0.5",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "pg": "^7.4.3",
    "postcss": "^7.0.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.6",
    "postcss-preset-env": "^5.2.2",
    "prismjs": "^1.15.0",
