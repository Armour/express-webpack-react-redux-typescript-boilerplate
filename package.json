{
  "name": "express-webpack-react-redux-typescript-boilerplate",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Armour/express-webpack-react-redux-typescript-boilerplate.git"
  },
  "author": "Chong Guo <armourcy@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "trash frontend/dist .awcache coverage",
    "dll": "cross-env NODE_ENV=production webpack --config webpack.config.dll.babel.js",
    "dev": "yarn clean && yarn dll && concurrently --raw \"yarn dev-server\" \"yarn dev-client\"",
    "dev-server": "cross-env NODE_ENV=development nodemon --exec babel-node backend/server.js",
    "dev-client": "cross-env NODE_ENV=development webpack-dev-server --hot --config webpack.config.dev.babel.js",
    "prod": "yarn build && yarn serve",
    "build": "yarn clean && yarn dll && cross-env NODE_ENV=production webpack --config webpack.config.prod.babel.js",
    "serve": "cross-env NODE_ENV=production nodemon --exec babel-node backend/server.js",
    "profile": "yarn clean && yarn dll && cross-env NODE_ENV=production webpack --config webpack.config.profile.babel.js",
    "eslint": "eslint -f codeframe \"**/*.js\"",
    "tslint": "tslint -t codeFrame \"**/*.tsx\" \"**/*.d.ts\" -e \"node_modules/**\" -e \"**/__tests__/**\"",
    "stylelint": "stylelint \"**/*.css **/*.sass **/*.scss\"",
    "lint": "yarn eslint && yarn tslint && yarn stylelint",
    "test": "jest --no-cache --coverage",
    "coverage": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "deploy": "heroku container:push web"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-push": "yarn test && yarn coverage"
    }
  },
  "dependencies": {
    "@types/i18next": "^8.4.4",
    "@types/i18next-browser-languagedetector": "^2.0.1",
    "@types/materialize-css": "^1.0.4",
    "@types/prismjs": "^1.9.0",
    "@types/react": "^16.4.12",
    "@types/react-content-loader": "^3.1.3",
    "@types/react-dom": "^16.0.7",
    "@types/react-i18next": "^7.8.2",
    "@types/react-loadable": "^5.4.1",
    "@types/react-redux": "^6.0.6",
    "@types/react-router": "^4.0.30",
    "@types/react-router-dom": "^4.3.0",
    "@types/redux-logger": "^3.0.6",
    "@types/uuid": "^3.4.3",
    "@types/webpack-env": "^1.13.6",
    "add-asset-html-webpack-plugin": "^2.1.3",
    "awesome-typescript-loader": "^5.2.0",
    "axios": "^0.18.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-prismjs": "^1.0.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "body-parser": "^1.18.3",
    "colors": "^1.3.2",
    "compression": "^1.7.3",
    "concurrently": "^4.0.0",
    "connect-redis": "^3.3.3",
    "connected-react-router": "^4.4.1",
    "cookie-parser": "^1.4.3",
    "copy-webpack-plugin": "^4.5.2",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "cssnano": "^4.1.0",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "file-loader": "^2.0.0",
    "helmet": "^3.13.0",
    "history": "^4.7.2",
    "html-webpack-plugin": "^3.2.0",
    "http-status": "^1.2.0",
    "i18next": "^11.6.0",
    "i18next-browser-languagedetector": "^2.2.3",
    "image-webpack-loader": "^4.3.1",
    "immutable": "4.0.0-rc.9",
    "materialize-css": "1.0.0-rc.2",
    "mini-css-extract-plugin": "^0.4.2",
    "morgan": "^1.9.0",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.3",
    "offline-plugin": "^5.0.5",
    "pg": "^7.4.3",
    "postcss": "^7.0.2",
    "postcss-import": "^12.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^5.3.0",
    "prismjs": "^1.15.0",
    "progress-bar-webpack-plugin": "^1.11.0",
    "react": "^16.4.2",
    "react-content-loader": "^3.1.2",
    "react-dom": "^16.4.2",
    "react-hot-loader": "^4.3.5",
    "react-i18next": "^7.11.0",
    "react-loadable": "^5.5.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.16.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.22.1",
    "trash-cli": "^1.4.0",
    "ts-loader": "^4.5.0",
    "typescript": "^3.0.1",
    "url-loader": "^1.1.1",
    "uuid": "^3.3.2",
    "webpack": "^4.17.1",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.1.0",
    "webpack-merge": "^4.1.4",
    "webpack-pwa-manifest": "^3.7.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/react-test-renderer": "^16.0.2",
    "commitlint": "^7.0.0",
    "commitlint-config-armour": "^1.2.1",
    "coveralls": "^3.0.2",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "husky": "1.0.0-rc.13",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.5.0",
    "react-test-renderer": "^16.4.2",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "webpack-dev-server": "^3.1.6"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "nodemonConfig": {
    "watch": [
      "backend/controllers/",
      "backend/routes/",
      "backend/db/",
      "backend/config.json",
      "backend/server.js"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(js|jsx|ts|tsx)$",
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.tsx",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "moduleDirectories": [
      "node_modules",
      "frontend/src",
      "backend"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ]
  }
}
