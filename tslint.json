{
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "rules": {
    "jsx-boolean-value": false,
    "jsx-no-multiline-js": false,
    "max-line-length": false,
    "no-console": [
      true,
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "no-require-imports": false,
    "no-submodule-imports": false,
    "no-var-requires": false,
    "newline-before-return": false,
    "object-literal-sort-keys": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords"
    ]
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  }
}
